<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/titulo_atividade_pausa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="XXXXXX XXXXX "
        android:textColor="#66cccc"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"/>


    <ImageView
        android:id="@+id/deletar_atividade_pausa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/deletar_diario_branco"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/titulo_atividade_pausa"
        android:layout_marginTop="18dp"/>
</RelativeLayout>